{
  "name": "global-mechanic-www",
  "version": "1.0.0",
  "description": "Global Mechanic Website",
  "main": "dist-server",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --require ./test/test-helper.js 'test/**/*.@(js|jsx)'",
    "test-watch": "npm run test -- --watch",
    "build-scss": "node_modules/.bin/babel-node util/build-index-and-variables-scss.js",
    "build-client": "rm -rf ./dist-client && webpack --config ./config/webpack.production.js",
    "build-iso": "rm -rf ./dist-iso && node_modules/.bin/babel ./src-iso --out-dir ./dist-iso",
    "build-server": "rm -rf ./dist-server && node_modules/.bin/babel ./src-server --out-dir ./dist-server",
    "develop-db": "mongod --dbpath ./storage/data",
    "develop-client": "webpack-dev-server --config ./config/webpack.dev.js",
    "develop-server": "npm run build-server -- --watch & npm run build-iso -- --watch & ./node_modules/.bin/nodemon --watch dist-server  --watch dist-iso ./dist-server ",
    "build": "npm run build-server & npm run build-iso & npm run build-client",

    "heroku-postbuild": "npm run build",
    "start": "node ./dist-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalMechanic/global-mechanic-www.git"
  },
  "author": "Ben Gaumond",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GlobalMechanic/global-mechanic-www/issues"
  },
  "homepage": "https://github.com/GlobalMechanic/global-mechanic-www#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.10.4",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2017": "^1.4.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.0.1",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "react-hot-loader": "^1.3.0",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.0",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "app-module-path": "^2.1.0",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "dotenv": "^2.0.0",
    "express-history-api-fallback": "^2.0.0",
    "feathers": "^2.0.2",
    "feathers-authentication": "^0.7.12",
    "feathers-configuration": "^0.3.3",
    "feathers-errors": "^2.2.0",
    "feathers-hooks": "^1.5.8",
    "feathers-mongodb": "^2.6.0",
    "feathers-rest": "^1.5.0",
    "feathers-socketio": "^1.4.2",
    "fs-promise": "^1.0.0",
    "immutable": "^3.8.1",
    "is-explicit": "^1.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mongodb": "^2.2.12",
    "nedb": "^1.8.0",
    "normalize.css": "^4.2.0",
    "object-assign": "^4.1.0",
    "promise-polyfill": "^6.0.2",
    "promise-queue": "^2.2.3",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^2.8.1",
    "s3fs": "^2.5.0"
  }
}
